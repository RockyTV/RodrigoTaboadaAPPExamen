<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    apps:cardCornerRadius="4dp"
    apps:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    apps:contentPadding="4dp"
    apps:cardBackgroundColor="@color/orange">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoId"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintStart_toStartOf="parent"
            apps:layout_constraintTop_toTopOf="parent"
            apps:srcCompat="@drawable/ic_launcher_foreground"
            />

        <TextView
            android:id="@+id/textFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            apps:layout_constraintStart_toEndOf="@+id/logoId"
            apps:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Gender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            apps:layout_constraintStart_toEndOf="@+id/logoId"
            apps:layout_constraintTop_toBottomOf="@+id/textFullName" />

        <TextView
            android:id="@+id/email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            apps:layout_constraintStart_toEndOf="@+id/logoId"
            apps:layout_constraintTop_toBottomOf="@+id/Gender2" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:srcCompat="@drawable/ic_delete_black_24dp" />

        <ImageButton
            android:id="@+id/btnEdith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintEnd_toStartOf="@+id/btnDelete"
            apps:srcCompat="@drawable/ic_app_registration_black_24dp" />

        <ImageButton
            android:id="@+id/btnView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            apps:layout_constraintBottom_toBottomOf="parent"
            apps:layout_constraintEnd_toStartOf="@+id/btnEdith"
            apps:srcCompat="@drawable/ic_pageview_black_24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>